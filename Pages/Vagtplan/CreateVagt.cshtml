@page
@model MedarbejderVagtKaos.Pages.Vagtplan.CreateVagtModel

<h1>Create Vagt</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="@Model.Vagt.AssignedMedarbejder.MedarbejderName" class="control-label">Medarbejder</label>
        <select asp-for="@Model.Vagt.AssignedMedarbejder.MedarbejderName" asp-items="@Model.MedarbejderOptions" class="form-control">
            <option value="">Select a Medarbejder</option>
        </select>
        <span asp-validation-for="@Model.Vagt.AssignedMedarbejder.MedarbejderName" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="@Model.Vagt.StartTid" class="control-label">Start Tid</label>
        <select asp-for="@Model.Vagt.StartTid" asp-items="@Model.StartTidOptions()" class="form-control"></select>
        <span asp-validation-for="@Model.Vagt.StartTid" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Vagt.SlutTid" class="control-label">Slut Tid</label>
        <select asp-for="@Model.Vagt.SlutTid" asp-items="@Model.SlutTidOptions()" class="form-control"></select>
        <span asp-validation-for="@Model.Vagt.SlutTid" class="text-danger"></span>
    </div>
    <p>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </p>
</form>